{
  "name": "cross-stack-lib",
  "version": "1.0.0",
  "description": "A cross-stack UI component library built with Lit and Vite.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./xstack-table": {
      "import": "./dist/xstack-table.es.js",
      "require": "./dist/xstack-table.cjs.js"
    },
    "./xstack-modal": {
      "import": "./dist/xstack-modal.es.js",
      "require": "./dist/xstack-modal.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "web-components",
    "lit",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}