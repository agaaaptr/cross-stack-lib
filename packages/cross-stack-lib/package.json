{
  "name": "cross-stack-lib",
  "version": "1.0.2",
  "description": "A cross-stack UI component library built with Lit and Vite.",
  "main": "dist/cross-stack-lib.umd.js",
  "module": "dist/cross-stack-lib.es.js",
  "exports": {
    ".": {
      "import": "./dist/cross-stack-lib.es.js",
      "require": "./dist/cross-stack-lib.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "web-components",
    "lit",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}