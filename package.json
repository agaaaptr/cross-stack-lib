{
  "name": "cross-stack-lib",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "npm run build -w packages/cross-stack-lib -w apps/docs",
    "lint": "npm run lint -w packages/cross-stack-lib -w apps/docs",
    "test": "npm test -w packages/cross-stack-lib",
    "dev:docs": "npm run dev -w apps/docs",
    "dev:angular": "(cd cross-framework-examples/example-angular && npm run start)",
    "dev:react": "(cd cross-framework-examples/example-react && npm run dev)",
    "dev:vue": "(cd cross-framework-examples/example-vue && npm run dev)"
  },
  "devDependencies": {
    "vite": "^7.1.2"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.3",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0"
  }
}